<h1><%= @love_pod.name %></h1>

<p>
  <strong>Description:</strong>
  <%= @love_pod.description %>
</p>

<p>
  <strong>Capacity:</strong>
  <%= @love_pod.capacity %>
</p>

<%= link_to 'Edit', edit_love_pod_path(@love_pod), class: 'btn btn-warning' %>
<%= link_to 'Delete', love_pod_path(@love_pod),
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: 'btn btn-danger' %>
<%= link_to 'Back to Love Pods', love_pods_path, class: 'btn btn-link' %>
