<div class="card">
  <% if @love_pod.photo.attached? %>
    <%= cl_image_tag(@love_pod.photo.key) %>
  <% else %>
    <%= cl_image_tag(@love_pod.image_url) %>
  <% end %>
  <h2><%= @love_pod.name %></h1>

  <p>
    <strong>Description:</strong>
    <%= @love_pod.description %>
  </p>

  <p>
    <strong>Capacity:</strong>
    <%= @love_pod.capacity %>
  </p>

  <p>
    <strong>Availability time frame:</strong>
    <%= @love_pod.availabilty_start_time.strftime("%H:%M") %> - <%= @love_pod.availabilty_end_time.strftime("%H:%M")  %>
  </p>

  <div class="butt-list">
    <%= link_to 'Back to festival', festival_path(@festival), class: 'butt button-white' %>
    <%= link_to 'Back to my bookings', user_bookings_path, class: 'butt button-white' %>
  </div>
</div>
