<h1 class="page-title">Add a new festival</h1>

<%= form_with(model: @festival, local: true) do |form| %>
  <% if @festival.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@festival.errors.count, "error") %> prohibited this festival from being saved:</h2>

      <ul>
        <% @festival.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :festival_name %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :festival_location %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, id: :festival_start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, id: :festival_end_date %>
  </div>

  <div class="field">
    <%= form.label :love_pods, "Select Love Pods", class: 'form-label' %>
    <%= form.collection_select :love_pod_ids, LovePod.all, :id, :name, {}, {multiple: true, size: 10} %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo, id: :festival_photo %>
  </div>

<div class="butt-list">
    <%= form.submit class:"butt button-pink" %>
  <% end %>

  <%= link_to 'Back to Festivals', festivals_path, class:"butt button-white" %>
</div>
